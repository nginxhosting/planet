/**
 * General page layout, moving all elements to the right position...
 */

html {
  min-height: 101%;
  font-size: 9pt;
  font-family: "Liberation Sans", "Bitstream Vera Sans", sans-serif;
  color: #374153;
  background-color: #b7b7b7;
  text-align: justify;
}

body {
  width: 810px;
  margin: 0 auto;
  padding: 0;
}

/**
 * General textlayout
 */

a, a:link, a:visited {
  cursor: pointer;
  color: #4a7ad8;
  text-decoration: none;
  border-bottom: 0;
}

a:hover {
  text-decoration: underline;
}

img {
  border: 0;
}

h2 {
  margin-top: 10px;
}

/**
 * Hide dynamic controllers generally - unhide by javascript, so only when
 * dynamic effects can be used anyway!
 */

#page {
  padding: 0;
  margin: 0;
  background: url(../images/bg-menu2.png) no-repeat bottom right;
}

#header {
  height: 95px;
  width: 800px;
  background: url(../images/banner.png) transparent top left no-repeat;
  padding: 45px 0 0 8px;
  margin: 0;
  display: block;
  float: left;
}

#content {
  background: url(../images/bg-content.png) transparent repeat-y top left ;
  width: 776px;
  min-height: 300px;
  margin: 0 0 0 0;
  padding: 0 24px 0 8px;
  float: left;
}

div.day h2 {
  margin: 10px 0;
  padding: 0 0 0 20px;
}

#footer {
  clear: both;
  height: 70px;
  width: 770px;
  margin: 0;
  font-size: 0.9em;
  padding: 15px 10px 0 10px;
  background: url(../images/footer.png) top left no-repeat;
  text-align: center;
  float: left;
}

/**
 * Header layout
 */

#toplinks {
  position: absolute;
  top: 115px;
  padding: 0 0 0 20px;
}

#ngxhome {
  float: right;
  display: block;
  right: 50px;
  top: -25px;
  position: relative;
}

#ngxplanet {
  float: left;
  display: block;
  right: -15px;
  top: -15px;
  position: relative;
}

#toplinks a {
  color: #374153;
  font-size: 0.9em;
  line-height: 22px;
  vertical-align: middle;
  margin-right: 5px;
}

#toplinks a img {
  margin: -3px 0 0 3px;
  vertical-align: middle;
}

.menucontent {
  display: none;
  /* padding: 0px 0px 0px 20px; */
  padding: 0 15px 15px;
  margin: 10px 15px 0;
  background-color: #eeeeee;
  border-color: #cccccc;
  border-width: 1px;
  border-style: solid;
}

#feedsheader_feed {
  padding-right: 150px;
}

/* Content Layout */

.face {
  margin-right: 10px;
  width: 64px;
  height: 64px;
  float: right
}

.channelgroup {
  /*background: url(../images/default-face.png) no-repeat bottom left;*/
  background: url(../images/between-posts.png) no-repeat bottom center;
  padding: 0px 0px 10px 0px;
  /*margin: 0 0 12px 0;*/
}

.channelgroup h4 .blogtitle {
  font-size: 240%;
  font-weight: lighter;
  margin: 0px;
  text-align: left;
}

.channelgroup h4 .blogtitle a {
  color: #455269; /*wee bit lighter*/
}

.entrygroup {
  margin: 0px 38px 0px 28px;
}

.entry {
  margin-left: 20px;
}

.entry p:first-child:first-letter {
  font-size: 250%;
}

hr {
  display: none;
}

.entry p.date {
  font-size: 7pt;
  text-align: right;
}

.entry img {
  padding: 0;
  margin: 5px;
  max-width: 100%;
}

.entry blockquote {
  border: 1px dashed #374153;
  background-color: #cccccc;
  margin: 7px 20px 7px 20px;
  padding: 0px;
  overflow: auto;
}

.entry blockquote p:first-child:first-letter {
  font-size: 8pt;
  margin: 0;
  padding: 0;
}

.entry code {
  margin: 0;
  padding: 0;
  white-space: inherit;
}

/* Handle pre tags */

pre {
  white-space: pre-wrap;
}
